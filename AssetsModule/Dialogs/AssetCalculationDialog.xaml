<UserControl x:Class="AssetsModule.Dialogs.AssetCalculationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetsModule.Dialogs"
             xmlns:h="clr-namespace:AccountingUI.Core.Helpers;assembly=AccountingUI.Core"
             xmlns:date="clr-namespace:AccountingUI.Core.Validation;assembly=AccountingUI.Core"
             xmlns:prism="http://prismlibrary.com/">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="Height" Value="400"/>
            <Setter Property="Width" Value="670"/>
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Obračun amortizacije" Margin="5" Padding="5" FontSize="18"
                   Grid.ColumnSpan="3"
                   Grid.Row="0" Grid.Column="0"/>

        <TextBlock Text="Naziv" Margin="5" Padding="5"
                   Grid.Row="1" Grid.Column="0"/>
        <TextBox Text="{Binding Asset.Naziv, Mode=TwoWay,
                 ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" Padding="5" Width="200" IsEnabled="False"
                 Grid.Row="1" Grid.Column="1"/>
        <TextBlock Text="Datum nabave" Margin="5" Padding="5"
                   Grid.Row="2" Grid.Column="0"/>
        <DatePicker Margin="5" Padding="5" Width="200"
                    h:DatePickerHelper.Watermark="Odaberite datum" IsEnabled="False"
                    Grid.Row="2" Grid.Column="1">
            <DatePicker.SelectedDate>
                <Binding Path="Asset.DatumNabave"
                         Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <date:DateValidate />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <TextBlock Text="Datum uporabe" Margin="5" Padding="5"
                   Grid.Row="1" Grid.Column="2"/>
        <DatePicker Margin="5" Padding="5" Width="200"
                    h:DatePickerHelper.Watermark="Odaberite datum" IsEnabled="False"
                    Grid.Row="1" Grid.Column="3">
            <DatePicker.SelectedDate>
                <Binding Path="Asset.DatumUporabe"
                         Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <date:DateValidate />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>
        <TextBlock Text="Trenutna vrijednost" Margin="5" Padding="5"
                   Grid.Row="2" Grid.Column="2"/>
        <TextBox Text="{Binding Asset.SadasnjaVrijednost, Mode=TwoWay, StringFormat=N2,
                 ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" Padding="5" Width="200" IsEnabled="False"
                 Grid.Row="2" Grid.Column="3"/>

        <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5"/>

        <TextBlock Text="Razdoblje obračuna" Margin="5" Padding="5"
                   FontSize="14" Grid.ColumnSpan="5"
                   Grid.Row="4" Grid.Column="0"/>
        
        <TextBlock Text="Datum od" Margin="5" Padding="5"
                   Grid.Row="5" Grid.Column="0"/>
        <DatePicker Margin="5" Padding="5" Width="200"
                    h:DatePickerHelper.Watermark="Odaberite datum"
                    Grid.Row="5" Grid.Column="1">
            <DatePicker.SelectedDate>
                <Binding Path="DatumOd"
                         Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <date:DateValidate />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <TextBlock Text="Datum do" Margin="5" Padding="5"
                   Grid.Row="5" Grid.Column="2"/>
        <DatePicker Margin="5" Padding="5" Width="200"
                    h:DatePickerHelper.Watermark="Odaberite datum"
                    Grid.Row="5" Grid.Column="3">
            <DatePicker.SelectedDate>
                <Binding Path="DatumDo"
                         Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <date:DateValidate />
                    </Binding.ValidationRules>
                </Binding>
            </DatePicker.SelectedDate>
        </DatePicker>

        <Button Content="Obračunaj" Command="{Binding CalculateAssetCommand}" Width="85" Height="30"
                Padding="5" Margin="5" HorizontalAlignment="Left"
                Grid.Row="6" Grid.Column="0"/>

        <TextBlock Text="Iznos amortizacije" Margin="5" Padding="5"
                   Grid.Row="6" Grid.Column="2"/>
        <TextBox Text="{Binding IznosAmortizacije, Mode=TwoWay, StringFormat=N2,
                 ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" Padding="5" Width="200" IsEnabled="False"
                 Grid.Row="6" Grid.Column="3"/>

        <Separator Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="5"/>

        <TextBlock Text="Konto troška" Margin="5" Padding="5"
                   Grid.Row="8" Grid.Column="0"/>
        <TextBox Text="{Binding KontoTroska, Mode=TwoWay, StringFormat=N2,
                 ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" Padding="5" Width="200"
                 Grid.Row="8" Grid.Column="1">
            <TextBox.InputBindings>
                <MouseBinding  Gesture="LeftDoubleClick" 
                               Command="{Binding OpenAccountsSelectionCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <TextBlock Text="Konto otpisa" Margin="5" Padding="5"
                   Grid.Row="8" Grid.Column="2"/>
        <TextBox Text="{Binding Asset.KontoOtpisa, Mode=TwoWay, StringFormat=N2,
                 ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" Padding="5" Width="200" IsEnabled="False"
                 Grid.Row="8" Grid.Column="3"/>

        <Separator Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="5"/>

        <Button Content="Knjiži" Command="{Binding ProcessAssetCommand}" Width="85" Height="30"
                Padding="5" Margin="5" HorizontalAlignment="Left"
                Grid.Row="10" Grid.Column="0"/>

    </Grid>
</UserControl>
